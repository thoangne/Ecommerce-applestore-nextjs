  password         String
  name             String?
  phone            String?
  address          String?
  role             String             @default("user") // user | admin | staff
  isActive         Boolean            @default(true) // cÃ³ bá»‹ khÃ³a tÃ i khoáº£n khÃ´ng
  lastLogin        DateTime? // láº§n Ä‘Äƒng nháº­p gáº§n nháº¥t
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  orders           Order[]
  reviews          Review[]
